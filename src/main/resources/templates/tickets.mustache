{{>layout/header}}
<!-- Page Heading -->

<h1 class="h3 mb-2 text-gray-800" id="title-tickets">Tickets List</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Urgency</th>
                        <th>Status</th>
                        <th>Operating system</th>
                        <th>Issued from</th>
                        <th>developper</th>
                    </tr>
                </thead>
                <tbody>
                    {{#tickets}}
                    <tr>
                        <td>{{description}}</td>
                        <td>{{urgence}}</td>
                        <td>{{status}}</td>
                        <td>{{os}}</td>
                        <td>{{client}}</td>
                        <td>{{dev}}</td>
                    </tr>
                    {{/tickets}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{>layout/footer}}